{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "crm/firestore.indexes.json"
  },
  "functions": {
    "source": "crm/functions",
    "runtime": "nodejs18",
    "predeploy": ["npm --prefix crm/functions run build"]
  },
  "hosting": {
    "public": "sns/flutter_app/build/web",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ]
  },
  "storage": {
    "rules": "crm/storage.rules"
  },
  "extensions": {}
}
