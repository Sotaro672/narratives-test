rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - SNSユーザー（認証されたユーザーは読み書き可能）
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Business Users collection - CRMビジネスユーザー（認証されたユーザーは読み書き可能）
    match /business_users/{businessUserId} {
      allow read, write: if request.auth != null;
    }
    
    // Notifications collection - 認証されたユーザーは読み書き可能
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Mail collection - 認証されたユーザーは読み書き可能
    match /mail/{mailId} {
      allow read, write: if request.auth != null;
    }
    
    // その他のコレクション - 認証されたユーザーは読み書き可能
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
